@{
    ViewBag.Title = "Home Page";
}




<table border="1" class="table">

    <tr>
        <th>Task</th>
        <th>Description</th>
        <th>Due Date</th>
        <th>Completed?</th>
        <th>Delete</th>
        <th>Edit</th>
    </tr>

    @foreach (var item in ViewBag.Task)
    {
        <tr>
            <td>@item.task</td>
            <td>@item.descrip</td>
            <td>@item.dateby</td>
            <td><input type="checkbox" checked="@item.status" onchange="/Home/ChangeStatus?itemid=@item.taskID" /></td>
            <td><a href="/Home/DeleteItem?itemid=@item.taskID" onclick="return confirm('Are you sure you want to delete this?')">Delete</a></td>
            <td><a href="/Home/ItemDetails?itemid=@item.taskID">Update</a></td>
        </tr>
    }



</table>